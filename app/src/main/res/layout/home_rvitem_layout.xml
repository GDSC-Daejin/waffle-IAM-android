<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/backgroundcolor1"
    >

    <LinearLayout
        android:id="@+id/home_item_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounditem_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="?attr/backgroundcolor1"
            android:padding="5dp">

            <TextView
                android:id="@+id/home_pill_name_tv"
                android:layout_width="318dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:textColor="?attr/textcolor"
                android:gravity="center"
                android:text="pillName" />

            <TextView
                android:id="@+id/home_pill_time_tv"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:textColor="?attr/textcolor"
                android:gravity="center"
                android:text="pillTime"
                />

            <ImageView
                android:id="@+id/home_edit_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_mode_edit_outline_24"
                />
            <ImageView
                android:id="@+id/home_remove_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_delete_24"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>