<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <!-- Light/Day Mode theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor1">#FCFCFC</item>
        <item name="toolbar">#4E5DB3</item>
        <item name="textcolor">#000000</item>
        <item name="tintcolor">#4E5DB3</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="bottomnavibackground">#FFFFFF</item>
        <item name="floatbutton">#4E5DB3</item>
        <item name="modeselect">#000000</item>
        <item name="cardColor">#00BCD4</item>
        <item name="textsize">@dimen/main_text_size_1</item>
        <item name="android:alertDialogTheme">@style/dialogStyle</item>
    </style>


    <!-- Night / dark  Mode theme. -->
    <style name="darktheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor1">#303030</item>
        <item name="toolbar">#424242</item>
        <item name="textcolor">#ffffff</item>
        <item name="tintcolor">#ffffff</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="bottomnavibackground">#212121</item>
        <item name="floatbutton">#1A1A1B</item>
        <item name="modeselect">#FCFCFC</item>
        <item name="cardColor">#3D4155</item>
        <item name="textsize">@dimen/main_text_size_1</item>
    </style>


    <style name="dialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:buttonTint">@color/primary</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/buttonBarButtonStyle.Neutral</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/buttonBarButtonStyle.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/buttonBarButtonStyle.Negative</item>
    </style>

    <style name="buttonBarButtonStyle" parent="Widget.AppCompat.Button.Colored">
    </style>

    <style name="buttonBarButtonStyle.Neutral">
    </style>

    <style name="buttonBarButtonStyle.Negative">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="buttonBarButtonStyle.Positive">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="darktextsizetheme" parent="AppTheme">
        <item name="textsize">@dimen/main_text_size_1</item>
    </style>

    <style name="smalltextsizetheme" parent="AppTheme">
        <item name="textsize">@dimen/main_text_size_0</item>
    </style>

    <style name="mediumtextsizetheme" parent="AppTheme">
        <item name="textsize">@dimen/main_text_size_1</item>
    </style>

    <style name="largetextsizetheme" parent="AppTheme">
        <item name="textsize">@dimen/main_text_size_2</item>
    </style>




    <style name="searchViewStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">?attr/modeselect</item>
    </style>

    <style name="layoutTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">?attr/backgroundcolor1</item>
    </style>
</resources>